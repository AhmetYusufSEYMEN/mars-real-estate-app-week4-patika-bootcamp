<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.seymen.retrofitandrecyclerview.ui.main.view.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >

        <!--app:launchSingleTop="true"-->

        <action
            android:id="@+id/action_splashFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_marsListFragment"
            app:destination="@id/marsListFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/marsListFragment"
        android:name="com.seymen.retrofitandrecyclerview.ui.main.view.MarsListFragment"
        android:label="MarsListFragment" >
        <action
            android:id="@+id/action_marsListFragment2_to_marsDetailsFragment"
            app:destination="@id/marsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/marsDetailsFragment"
        android:name="com.seymen.retrofitandrecyclerview.ui.main.view.MarsDetailsFragment"
        android:label="MarsDetailsFragment" />
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.seymen.retrofitandrecyclerview.ui.main.view.OnBoardingFragment"
        android:label="OnBoardingFragment" >
        <action
            android:id="@+id/action_onBoardingFragment_to_marsListFragment"
            app:destination="@id/marsListFragment"
            app:popUpTo="@id/onBoardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>