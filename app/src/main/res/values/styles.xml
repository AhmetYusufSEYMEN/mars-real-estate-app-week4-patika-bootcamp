<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">80dp</item>
        <item name="cornerSizeBottomRight">80dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="txvListStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="titleBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lora</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
    </style>

    <style name="dividerStyle">
        <item name="android:layout_width">@dimen/_2sdp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/orange</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
    </style>

    <style name="btnStyle" parent="@style/Widget.Material3.Button.ElevatedButton">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>